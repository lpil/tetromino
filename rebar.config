{erl_opts, [debug_info]}.
{src_dirs, ["src", "gen/src"]}.

{profiles, [
    {test, [{src_dirs, ["src", "test", "gen/src", "gen/test"]}]}
]}.

{escript_incl_apps, [
    gleam_stdlib,
    gleam_bitwise,
    gleam_io
]}.

{project_plugins, [rebar_gleam]}.

{deps, [
    {gleam_stdlib, "0.5.0"},
    {gleam_bitwise, {git, "https://github.com/gleam-lang/bitwise", {branch, "master"}}},
    {gleam_io, {git, "https://github.com/gleam-experiments/io", {branch, "master"}}}
]}.
